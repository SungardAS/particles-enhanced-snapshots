{{#resource}}
       "Type": "AWS::IAM::Role",
         {{#if retain}}"DeletionPolicy" : "Retain",{{/if}}
	"Condition" : "{{definedRoleLogicalId}}",
         "Properties": {
            "AssumeRolePolicyDocument": {
               "Version" : "2012-10-17",
               "Statement": [ {
                  "Effect": "Allow",
                  "Principal": {
                     "Service": [ "ec2.amazonaws.com" ]
                  },
                  "Action": [ "sts:AssumeRole" ]
               } ]
            },
            "Path": "/"
      }
{{/resource}}
