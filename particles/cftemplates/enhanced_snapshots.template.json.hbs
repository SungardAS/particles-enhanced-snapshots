{{#layout
  TemplateDescription=(partial 'template_description')
}}
{{condition "defined_ssh" logicalId="DefinedSsh"
  sshLocationLogicalId="SshLocation"}}

  {{set "minimal_stack"}}

  {{
    resource 'security_group'
    logicalId="SecurityGroup"
    nameTagLogicalId="NameTag"
    vpcId='{"Ref": "AWS::NoValue"}'
  }}

  {{
    resource 'instance' logicalId="Instance"
    nameTagLogicalId="NameTag"
    imageIdLogicalId="ImageId"
    keyNameLogicalId="KeyName"
    instanceTypeLogicalId="InstanceType"
    securityGroupLogicalId="SecurityGroup"
    subnetId='{"Ref": "AWS::NoValue"}'
  }}
  
  {{
    resource 'elastic_ip' logicalId="ElasticIP"
    instanceLogicalId="Instance"
    definedEIPLogicalId="DefinedEIP"
  }}


{{/layout}}
