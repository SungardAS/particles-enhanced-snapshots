                  }
                }
              },
              "003": {
                "command": "sed -i \"/export PATH/i export STACK_NAME=\"$STACK_NAME\" \" /etc/init.d/tomcat8 ",
                "env": {
                  "STACK_NAME": {
                    "Ref": "AWS::StackName"
                  }
                }
              }
            }
          },
          "runApp": {
